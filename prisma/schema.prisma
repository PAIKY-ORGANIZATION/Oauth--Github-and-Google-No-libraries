generator client {
    provider = "prisma-client-js"
    output   = "../src/generated/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id              String  @id @default(uuid())
    userName        String  @map("user_name")
    hash            String? //$ Optional if the user signs up with OAuth
    oauthProvider   String? @map("oauth_provider") //$ Optional if the user signs up with OAuth
    oauthProviderId String? @map("oauth_provider_id") //$ Example: Github ID, Google ID
    email           String?
	oauth_encrypted_token String? // We might need this even though we already have email. username, etc. Maybe for updates, getting user's repos, etc.
}
